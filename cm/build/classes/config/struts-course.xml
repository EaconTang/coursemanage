<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

	<!-- 与spring集成的写法，action等交予spring管理 -->
	<package name="loginAction" namespace="/" extends="abstract_struts">
	
		<action name="login" class="loginAction">
			<result name="success">/home.jsp</result>
			<result name="success" type="redirectAction">home</result>
			<result name="fail">/fail.jsp</result>
		</action>

		<!-- 该action只负责跳转，用struts提供的ActionSupport -->
		<action name="home">
			<result name="success">/home.jsp</result>
			<interceptor-ref name="myInterceptor" />
		</action>
	</package>
	
	<package name="homeOp" namespace="/" extends="abstract_struts">
		<action name="course_findCourse" class="courseAction" method="findCourse">
	        <result name="findcourse">/class_manage.jsp</result>
	    </action>
		<action name="course_*" class="courseAction" method="{1}">
			<result name="success" type="redirect">/class_manage.jsp</result>
			<result name="fail">/fail.jsp</result>
			<interceptor-ref name="myInterceptor" />
		</action>
	    <action name="showallcourse" class="courseAction" method="findAllCourse">
	        <result name="showallcourse">/class_manage.jsp</result>
	    </action>
		<action name="class_manage" >
			<result name="success">/class_manage.jsp</result>
		</action>
		<action name="*" >
			<result name="success">/{1}.html</result>
			<!-- <result name="success" type="redirectAction">class</result> -->
		</action>
		<!-- 
		<action name="class" >
			<result name="success">/class_manage.jsp</result>
		</action>
		-->
		
	</package>
